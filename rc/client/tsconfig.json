{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": ["es2015", "DOM"],
    "types": ["@citizenfx/client", "@types/node"],
    "outDir": "./",
    "baseUrl": "./",
    "paths": {
      "c@class/*": ["class/*"],
      "c@events/*": ["events/*"],
      "c@items/*": ["items/*"],
      "c@player/*": ["player/*"],
      "c@utils/*": ["utils/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*", "../types/**/*", "../shared/**/*"],
  "exclude": ["**/node_modules"]
}
