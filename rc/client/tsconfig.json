{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": ["es2015", "DOM"],
    "types": ["@citizenfx/client", "@types/node"],
    "outDir": "./",
    "baseUrl": "./",
    "paths": {
      "@class/*": ["class/*"],
      "@events/*": ["events/*"],
      "@items/*": ["items/*"],
      "@player/*": ["player/*"],
      "@utils/*": ["utils/*"],
      "@shared/*": ["../shared/*"],
      "@types/*": ["../../types/*"]
    }
  },
  "include": ["./**/*", "../../types/**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
}
